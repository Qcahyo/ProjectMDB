<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
	xmlns:app="http://schemas.android.com/apk/res-auto"
	xmlns:tools="http://schemas.android.com/tools"
	android:layout_width="match_parent"
	android:layout_height="match_parent"
	tools:context=".HomeActivity">

	<ImageView
		android:id="@+id/background"
		android:layout_width="600dp"
		android:layout_height="300dp"
		android:layout_alignParentTop="true"
		android:layout_marginTop="-56dp"
		app:srcCompat="@drawable/background"
		tools:layout_editor_absoluteX="58dp"
		tools:layout_editor_absoluteY="130dp" />

	<androidx.cardview.widget.CardView
		android:id="@+id/cvContainer"
		android:layout_width="335dp"
		android:layout_height="335dp"
		android:layout_centerHorizontal="true"
		android:layout_marginTop="80dp"
		app:cardCornerRadius="10dp"
		>

		<RelativeLayout
			android:layout_width="match_parent"
			android:layout_height="match_parent">


			<ImageView
				android:id="@+id/imgProfil"
				android:layout_width="120dp"
				android:layout_height="120dp"
				android:layout_centerHorizontal="true"
				android:layout_marginTop="30dp"
				app:srcCompat="@drawable/person" />

			<TextView
				android:id="@+id/tvNama"
				android:layout_width="wrap_content"
				android:layout_height="wrap_content"
				android:text="Markonah"
				android:textSize="25dp"
				android:textStyle="bold"
				android:layout_below="@+id/imgProfil"
				android:layout_centerHorizontal="true"
				android:layout_marginTop="10dp"
				/>

			<androidx.cardview.widget.CardView
				android:layout_width="250dp"
				android:layout_height="90dp"
				android:layout_centerHorizontal="true"
				android:layout_below="@+id/tvNama"
				app:cardCornerRadius="8dp"
				android:layout_marginTop="20dp"
				>

				<RelativeLayout
					android:layout_width="match_parent"
					android:layout_height="match_parent">

					<androidx.cardview.widget.CardView
						android:id="@+id/cvMeluncur"
						android:layout_width="50dp"
						android:layout_height="50dp"
						app:cardCornerRadius="25dp"
						android:layout_alignParentRight="true"
						android:layout_marginTop="15dp"
						android:layout_marginRight="25dp"
						>
						<RelativeLayout
							android:layout_width="match_parent"
							android:layout_height="match_parent">

						<ImageView
							android:id="@+id/imageView3"
							android:layout_width="35dp"
							android:layout_height="35dp"
							app:srcCompat="@drawable/meluncur"
							android:layout_centerInParent="true"
							/>

						</RelativeLayout>

					</androidx.cardview.widget.CardView>


					<TextView
						android:layout_width="wrap_content"
						android:layout_height="wrap_content"
						android:text="Meluncur ke kantor"
						android:textSize="8dp"
						android:textStyle="bold"
						android:layout_below="@+id/cvMeluncur"
						android:layout_alignParentRight="true"
						android:layout_marginRight="15dp"
						android:layout_marginTop="5dp"
						/>

					<androidx.cardview.widget.CardView
						android:id="@+id/cvInfo"
						android:layout_width="50dp"
						android:layout_height="50dp"
						app:cardCornerRadius="25dp"
						android:layout_marginTop="15dp"
						android:layout_marginLeft="25dp"
						>
						<RelativeLayout
							android:layout_width="match_parent"
							android:layout_height="match_parent">

							<ImageView
								android:id="@+id/imageView4"
								android:layout_width="35dp"
								android:layout_height="35dp"
								app:srcCompat="@drawable/ic_more_vert_black_24dp"
								android:layout_centerInParent="true"
								/>

						</RelativeLayout>

					</androidx.cardview.widget.CardView>

					<TextView
						android:layout_width="wrap_content"
						android:layout_height="wrap_content"
						android:text="Informasi"
						android:textSize="8dp"
						android:textStyle="bold"
						android:layout_below="@+id/cvMeluncur"
						android:layout_marginLeft="30dp"
						android:layout_marginTop="5dp"
						/>


				</RelativeLayout>
			</androidx.cardview.widget.CardView>

		</RelativeLayout>

	</androidx.cardview.widget.CardView>

	<androidx.cardview.widget.CardView
		android:id="@+id/cvDaftarKantor"
		android:layout_width="match_parent"
		android:layout_height="100dp"
		android:layout_below="@+id/cvContainer"
		android:layout_centerHorizontal="true"
		app:cardCornerRadius="0dp"
		android:layout_marginTop="10dp"
		>

		<RelativeLayout
			android:layout_width="match_parent"
			android:layout_height="match_parent">

		<ImageView
			android:id="@+id/imageView5"
			android:layout_width="65dp"
			android:layout_height="65dp"
			app:srcCompat="@drawable/ic_location_city_black_24dp"
			android:layout_marginTop="25dp"
			android:layout_marginLeft="20dp"
			/>

			<TextView
				android:layout_width="wrap_content"
				android:layout_height="wrap_content"
				android:text="Lihat daftar kantor"
				android:layout_toRightOf="@+id/imageView5"
				android:layout_marginLeft="30dp"
				android:layout_marginTop="50dp"/>

		</RelativeLayout>

	</androidx.cardview.widget.CardView>

	<androidx.cardview.widget.CardView
		android:id="@+id/cvDaftarKaryawan"
		android:layout_width="match_parent"
		android:layout_height="100dp"
		android:layout_below="@+id/cvDaftarKantor"
		android:layout_centerHorizontal="true"
		app:cardCornerRadius="0dp"
		android:layout_marginTop="2dp"
		>

		<RelativeLayout
			android:layout_width="match_parent"
			android:layout_height="match_parent">

			<ImageView
				android:id="@+id/imageView6"
				android:layout_width="65dp"
				android:layout_height="65dp"
				app:srcCompat="@drawable/ic_people_black_24dp"
				android:layout_marginTop="25dp"
				android:layout_marginLeft="20dp"
				/>

			<TextView
				android:layout_width="wrap_content"
				android:layout_height="wrap_content"
				android:text="Lihat daftar Karyawan"
				android:layout_toRightOf="@+id/imageView6"
				android:layout_marginLeft="30dp"
				android:layout_marginTop="50dp"/>


		</RelativeLayout>

	</androidx.cardview.widget.CardView>


</RelativeLayout>

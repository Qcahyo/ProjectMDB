<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
	xmlns:app="http://schemas.android.com/apk/res-auto"
	xmlns:tools="http://schemas.android.com/tools"
	android:layout_width="match_parent"
	android:layout_height="match_parent"
	tools:context=".DetailKaryawanActivity">

	<androidx.cardview.widget.CardView
		android:id="@+id/cvContainer"
		android:layout_width="335dp"
		android:layout_height="wrap_content"
		android:layout_centerHorizontal="true"
		android:layout_marginTop="80dp"
		app:cardCornerRadius="10dp"
		>

		<RelativeLayout
			android:layout_width="match_parent"
			android:layout_height="match_parent">


			<de.hdodenhof.circleimageview.CircleImageView
				android:id="@+id/imgFotoProfil"
				android:layout_width="100dp"
				android:layout_height="100dp"
				android:layout_marginTop="20dp"
				android:layout_marginLeft="25dp"
				app:srcCompat="@drawable/person" />

			<TextView
				android:id="@+id/tvDetailNama"
				android:layout_width="wrap_content"
				android:layout_height="wrap_content"
				android:text="Markonah"
				android:textSize="18dp"
				android:textStyle="bold"
				android:layout_marginLeft="150dp"
				android:layout_marginTop="25dp"
				android:textColor="@color/background"
				/>

			<androidx.cardview.widget.CardView
				android:id="@+id/cv_al"
				android:layout_width="280dp"
				android:layout_height="100dp"
				android:layout_centerHorizontal="true"
				app:cardCornerRadius="8dp"
				android:layout_marginTop="145dp"
				>

				<RelativeLayout
					android:layout_width="match_parent"
					android:layout_height="match_parent">

					<androidx.cardview.widget.CardView
						android:id="@+id/cvMeluncur"
						android:layout_width="50dp"
						android:layout_height="50dp"
						app:cardCornerRadius="25dp"
						android:layout_alignParentRight="true"
						android:layout_marginTop="15dp"
						android:layout_marginRight="25dp"
						>
						<RelativeLayout
							android:layout_width="match_parent"
							android:layout_height="match_parent">

							<ImageView
								android:id="@+id/imageView3"
								android:layout_width="35dp"
								android:layout_height="35dp"
								app:srcCompat="@drawable/ic_place_black_24dp"
								android:layout_centerInParent="true"
								/>


						</RelativeLayout>

					</androidx.cardview.widget.CardView>


                    <TextView
                        android:id="@+id/tvDetailAlamat"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_below="@+id/cvMeluncur"
                        android:fontFamily="@font/nunito_regular"
                        android:layout_marginTop="8dp"
                        android:layout_marginLeft="210dp"
                        android:textColor="@color/background"
                        android:text="Bogor"
                        android:textSize="14sp" />

					<androidx.cardview.widget.CardView
						android:id="@+id/cvInfo"
						android:layout_width="50dp"
						android:layout_height="50dp"
						app:cardCornerRadius="25dp"
						android:layout_marginTop="15dp"
						android:layout_marginLeft="25dp"
						>

                        <RelativeLayout
                            android:layout_width="match_parent"
                            android:layout_height="match_parent">

                            <ImageView
                                android:id="@+id/imageView4"
                                android:layout_width="35dp"
                                android:layout_height="35dp"
                                android:layout_centerInParent="true"
                                app:srcCompat="@drawable/gender" />


                        </RelativeLayout>


					</androidx.cardview.widget.CardView>

                    <TextView
                        android:id="@+id/tvDetailGender"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_below="@+id/cvInfo"
                        android:layout_marginTop="8dp"
                        android:layout_marginLeft="25dp"
                        android:textColor="@color/background"
                        android:fontFamily="@font/nunito_regular"
                        android:text="Informasi"
                        android:textSize="14sp" />

				</RelativeLayout>
			</androidx.cardview.widget.CardView>

			<TextView
				android:id="@+id/tvDetailNik"
				android:layout_width="wrap_content"
				android:layout_height="wrap_content"
				android:text="TextView"
				android:layout_below="@+id/tvDetailNama"
                android:textColor="@color/background"
				android:layout_marginTop="5dp"
				android:layout_marginLeft="150dp"
				/>

			<LinearLayout
				android:orientation="vertical"
				android:layout_below="@+id/cv_al"
				android:layout_marginLeft="30dp"
				android:layout_width="match_parent"
				android:layout_height="wrap_content">

			<LinearLayout
				android:layout_width="match_parent"
				android:layout_height="wrap_content"
				android:layout_marginTop="15dp"
				android:orientation="vertical">

				<TextView
					android:layout_width="wrap_content"
					android:layout_height="wrap_content"
					android:fontFamily="@font/nunito_semibold"
					android:text="Tempat Lahir"
					android:textColor="@color/background"
					android:textSize="15sp" />

				<TextView
					android:id="@+id/tv_tempat"
					android:layout_width="wrap_content"
					android:layout_height="wrap_content"
					android:fontFamily="@font/nunito_semibold"
					android:text="Jakarta"
					android:textColor="@color/background"
					android:textSize="18sp" />

				<View
					android:layout_width="match_parent"
					android:layout_height="1dp"
					android:layout_marginTop="15dp"
					android:background="#fff" />

			</LinearLayout>

			<LinearLayout
				android:layout_width="match_parent"
				android:layout_height="wrap_content"
				android:orientation="vertical">

				<TextView
					android:layout_width="wrap_content"
					android:layout_height="wrap_content"
					android:fontFamily="@font/nunito_semibold"
					android:text="Tanggal Lahir"
					android:textColor="@color/background"
					android:textSize="15sp" />

				<TextView
					android:id="@+id/tv_tgl"
					android:layout_width="wrap_content"
					android:layout_height="wrap_content"
					android:fontFamily="@font/nunito_semibold"
					android:text="08-01-1992"
					android:textColor="@color/background"
					android:textSize="18sp" />

				<View
					android:layout_width="match_parent"
					android:layout_height="1dp"
					android:layout_marginTop="15dp"
					android:background="#fff" />

			</LinearLayout>

			<LinearLayout
				android:layout_width="match_parent"
				android:layout_height="wrap_content"
				android:orientation="vertical">

				<TextView
					android:layout_width="wrap_content"
					android:layout_height="wrap_content"
					android:fontFamily="@font/nunito_semibold"
					android:text="Agama"
					android:textColor="@color/background"
					android:textSize="15sp" />

				<TextView
					android:id="@+id/tv_agama"
					android:layout_width="wrap_content"
					android:layout_height="wrap_content"
					android:fontFamily="@font/nunito_semibold"
					android:text="Islam"
					android:textColor="@color/background"
					android:textSize="18sp" />

				<View
					android:layout_width="match_parent"
					android:layout_height="1dp"
					android:layout_marginTop="15dp"
					android:background="#fff" />

			</LinearLayout>

			<LinearLayout
				android:layout_width="match_parent"
				android:layout_height="wrap_content"
				android:orientation="vertical">

				<TextView
					android:layout_width="wrap_content"
					android:layout_height="wrap_content"
					android:fontFamily="@font/nunito_semibold"
					android:text="Golongan Darah"
					android:textColor="@color/background"
					android:textSize="15sp" />

				<TextView
					android:id="@+id/tv_gol"
					android:layout_width="wrap_content"
					android:layout_height="wrap_content"
					android:fontFamily="@font/nunito_semibold"
					android:text="O"
					android:textColor="@color/background"
					android:textSize="18sp" />

				<View
					android:layout_width="match_parent"
					android:layout_height="1dp"
					android:layout_marginTop="15dp"
					android:background="#ffff" />

			</LinearLayout>

			<LinearLayout
				android:layout_width="match_parent"
				android:layout_height="wrap_content"
				android:orientation="vertical">

				<TextView
					android:layout_width="wrap_content"
					android:layout_height="wrap_content"
					android:fontFamily="@font/nunito_semibold"
					android:text="Status"
					android:textColor="@color/background"
					android:textSize="15sp" />

				<TextView
					android:id="@+id/tv_status"
					android:layout_width="wrap_content"
					android:layout_height="wrap_content"
					android:fontFamily="@font/nunito_semibold"
					android:text="BGelum Menikah"
					android:textColor="@color/background"
					android:textSize="18sp" />

				<View
					android:layout_width="match_parent"
					android:layout_height="1dp"
					android:layout_marginTop="15dp"
					android:background="#fff" />

			</LinearLayout>

			<LinearLayout
				android:layout_width="match_parent"
				android:layout_height="wrap_content"
				android:layout_marginTop="10dp"
				android:orientation="vertical">

				<TextView
					android:layout_width="wrap_content"
					android:layout_height="wrap_content"
					android:fontFamily="@font/nunito_semibold"
					android:text="Kewarganegaraan"
					android:textColor="@color/background"
					android:textSize="15sp" />

				<TextView
					android:id="@+id/tv_kewarganegaraan"
					android:layout_width="wrap_content"
					android:layout_height="wrap_content"
					android:fontFamily="@font/nunito_semibold"
					android:text="Indonesia"
					android:textColor="@color/background"
					android:textSize="18sp" />

				<View
					android:layout_width="match_parent"
					android:layout_height="1dp"
					android:layout_marginTop="15dp"
					android:background="#FFFF" />

			</LinearLayout>

			</LinearLayout>

		</RelativeLayout>

	</androidx.cardview.widget.CardView>

</RelativeLayout>

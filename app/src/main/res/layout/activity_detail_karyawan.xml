<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
	xmlns:app="http://schemas.android.com/apk/res-auto"
	xmlns:tools="http://schemas.android.com/tools"
	android:layout_width="match_parent"
	android:layout_height="match_parent"
	tools:context=".DetailKaryawanActivity">

	<androidx.cardview.widget.CardView
		android:id="@+id/cvContainer"
		android:layout_width="335dp"
		android:layout_height="335dp"
		android:layout_centerHorizontal="true"
		android:layout_marginTop="80dp"
		app:cardCornerRadius="10dp"
		>

		<RelativeLayout
			android:layout_width="match_parent"
			android:layout_height="match_parent">


			<de.hdodenhof.circleimageview.CircleImageView
				android:id="@+id/imgFotoProfil"
				android:layout_width="100dp"
				android:layout_height="100dp"
				android:layout_marginTop="20dp"
				android:layout_marginLeft="25dp"
				app:srcCompat="@drawable/person" />

			<TextView
				android:id="@+id/tvDetailNama"
				android:layout_width="wrap_content"
				android:layout_height="wrap_content"
				android:text="Markonah"
				android:textSize="18dp"
				android:textStyle="bold"
				android:layout_marginLeft="150dp"
				android:layout_marginTop="25dp"
				android:textColor="@color/background"
				/>

			<androidx.cardview.widget.CardView
				android:layout_width="280dp"
				android:layout_height="90dp"
				android:layout_centerHorizontal="true"
				app:cardCornerRadius="8dp"
				android:layout_marginTop="145dp"
				>

				<RelativeLayout
					android:layout_width="match_parent"
					android:layout_height="match_parent">

					<androidx.cardview.widget.CardView
						android:id="@+id/cvMeluncur"
						android:layout_width="50dp"
						android:layout_height="50dp"
						app:cardCornerRadius="25dp"
						android:layout_alignParentRight="true"
						android:layout_marginTop="15dp"
						android:layout_marginRight="25dp"
						>
						<RelativeLayout
							android:layout_width="match_parent"
							android:layout_height="match_parent">

							<ImageView
								android:id="@+id/imageView3"
								android:layout_width="35dp"
								android:layout_height="35dp"
								app:srcCompat="@drawable/ic_place_black_24dp"
								android:layout_centerInParent="true"
								/>

						</RelativeLayout>

					</androidx.cardview.widget.CardView>


					<TextView
						android:id="@+id/tvDetailAlamat"
						android:layout_width="wrap_content"
						android:layout_height="wrap_content"
						android:layout_alignParentRight="true"
						android:layout_marginTop="55dp"
						android:layout_marginEnd="-26dp"
						android:layout_marginRight="15dp"
						android:layout_marginBottom="-16dp"
						android:text="Bogor"
						android:textSize="8dp"
						android:textStyle="bold" />

					<androidx.cardview.widget.CardView
						android:id="@+id/cvInfo"
						android:layout_width="50dp"
						android:layout_height="50dp"
						app:cardCornerRadius="25dp"
						android:layout_marginTop="15dp"
						android:layout_marginLeft="25dp"
						>
						<RelativeLayout
							android:layout_width="match_parent"
							android:layout_height="match_parent">

							<ImageView
								android:id="@+id/imageView4"
								android:layout_width="35dp"
								android:layout_height="35dp"
								app:srcCompat="@drawable/gender"
								android:layout_centerInParent="true"
								/>

						</RelativeLayout>

					</androidx.cardview.widget.CardView>

					<TextView
						android:id="@+id/tvDetailGender"
						android:layout_width="wrap_content"
						android:layout_height="wrap_content"
						android:text="Informasi"
						android:textSize="8dp"
						android:textStyle="bold" />


				</RelativeLayout>
			</androidx.cardview.widget.CardView>

			<TextView
				android:id="@+id/tvDetailNik"
				android:layout_width="wrap_content"
				android:layout_height="wrap_content"
				android:text="TextView"
				android:layout_below="@+id/tvDetailNama"
				android:layout_marginTop="5dp"
				android:layout_marginLeft="150dp"
				/>

		</RelativeLayout>

	</androidx.cardview.widget.CardView>

</RelativeLayout>

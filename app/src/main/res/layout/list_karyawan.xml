<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
	xmlns:app="http://schemas.android.com/apk/res-auto"
	android:layout_width="match_parent"
	android:layout_height="wrap_content"
	>

			<androidx.cardview.widget.CardView
				android:id="@+id/cvDetail"
				android:layout_width="match_parent"
				android:layout_height="100dp"
				android:layout_marginTop="3dp"
				app:cardBackgroundColor="#FFFFFF">

				<RelativeLayout
					android:layout_width="match_parent"
					android:layout_height="wrap_content">

			<de.hdodenhof.circleimageview.CircleImageView
				android:id="@+id/img_employee"
				android:layout_width="80dp"
				android:layout_height="80dp"
				android:src="@mipmap/ic_launcher"
				android:layout_marginLeft="20dp"
				android:layout_centerVertical="true"
				android:layout_marginTop="60dp"
				/>

			<TextView
				android:id="@+id/tvNamaList"
				android:layout_width="wrap_content"
				android:layout_height="wrap_content"
				android:text="TextView"
				android:layout_toRightOf="@id/img_employee"
				android:layout_marginLeft="20dp"
				android:layout_marginTop="25dp"
				android:textStyle="bold"
				/>

			<TextView
				android:id="@+id/tvAlamatList"
				android:layout_width="wrap_content"
				android:layout_height="wrap_content"
				android:text="TextView"
				android:layout_toRightOf="@+id/img_employee"
				android:layout_marginTop="10dp"
				android:layout_marginLeft="20dp"
				android:layout_below="@+id/tvNamaList"
				/>

					<ImageView
						android:id="@+id/chevron"
						android:layout_width="50dp"
						android:layout_height="50dp"
						app:srcCompat="@drawable/chevron"
						android:layout_alignParentRight="true"
						android:layout_marginTop="20dp"
						android:layout_marginRight="22dp"
						/>

				</RelativeLayout>

			</androidx.cardview.widget.CardView>

</RelativeLayout>
